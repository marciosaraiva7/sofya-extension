{
  "manifest_version": 3,
  "name": "Sofya Extension",
  "version": "1.0.0",
  "description": "Extensão do Sofya para transcrição de consultas médicas.",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": ["windows"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' ; object-src 'self'"
  },
  "action": {
    "default_title": "Clique para abrir",
    "default_popup": "index.html"
  }
}
